<configuration>

  <contextName>cdap</contextName>

  <appender name="cdap" class="co.cask.cdap.logging.framework.CDAPLogAppender">
    <!-- Number of bytes for the sync interval setting of the avro file written by the appender -->
    <syncIntervalBytes>10485760</syncIntervalBytes>
    <!-- Maximum time in milliseconds a file is kept opened -->
    <maxFileLifetimeMs>21600000</maxFileLifetimeMs>
  </appender>

  <appender name="metrics" class="co.cask.cdap.logging.framework.MetricsLogAppender"/>

  <root level="ALL">
    <appender-ref ref="cdap"/>
    <appender-ref ref="metrics"/>
  </root>

</configuration>
