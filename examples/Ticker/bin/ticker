#!/usr/bin/env bash

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`
script=`basename $0`
user=$USER
epoch=`date +%s`

function usage() {
  echo "Ticker application lifecycle script."
  echo "Usage: $script --action <start|stop|status> [--gateway <hostname-port>]"
  echo ""
  echo "  Options"
  echo "    --action    Specifies the action to be taken on CMS application."
  echo "    --gateway   Specifies the hostname and port gateway is running on.(Default: localhost:10000)"
  echo "    --help      This help message"
  echo ""
}

function action() {
  local app=$1; shift;
  local program=$1; shift;
  local type=$1; shift;
  local action=$1; shift;
  local gateway=$1; shift

  http="-X POST"
  if [ "x$action" == "xstatus" ]; then
    http=""
  fi

  maction="$(tr '[:lower:]' '[:upper:]' <<< ${action:0:1})${action:1}"
  echo " - ${maction} on $type ..."
  # echo -ne "'$action' '$type' for application '$app' and program '$program'  :  "
  status=$(curl -s $http http://$gateway/v2/apps/$app/${type}s/$program/$action 2>/dev/null)
  if [ $? -ne 0 ]; then
   echo "Action '$action' failed."
  else
    if [ "x$action" == "xstatus" ]; then
      echo $status
    fi
  fi

}

if [ $# -lt 1 ]; then
  usage
  exit 1
fi

gateway="localhost:10000"
action=
while [ $# -gt 0 ]
do
  case "$1" in
    --action) shift; action="$1"; shift;;
    --gateway) shift; gateway="$1"; shift;;
    *)  usage; exit 1
  esac
done


if [ "x$action" == "x" ]; then
  usage
  echo 
  echo "Action not specified."
fi

app="Ticker"
action $app "TickTimeseriesFlow" "flow" $action $gateway
action $app "OrderDataFlow" "flow" $action $gateway
action $app "Timeseries" "procedure" $action $gateway
action $app "Orders" "procedure" $action $gateway
action $app "Summary" "procedure" $action $gateway
