bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`
script=`basename $0`

auth_token=
auth_file="$HOME/.continuuity.accesstoken"

function get_auth_token() {
  if [ -f $auth_file ]; then
    auth_token=`cat $auth_file`
  fi
}

function usage() {
  echo "Usage: $script --symbol <symbol> [--host <host>]"
  echo ""
  echo "  Options"
  echo "    --symbol    Specifies symbol to be tracked"
  echo "    --host      Specifies the host that Reactor is running on. (Default: localhost)"
  echo "    --help      This help message"
  echo ""
}

gateway="localhost"
ticker=
while [ $# -gt 0 ]
do
  case "$1" in
    --symbol) shift; ticker="$1"; shift;;
    --host) shift; gateway="$1"; shift;;
    *)  usage; exit 1
  esac
done

#  get the access token
get_auth_token

if [ "x$ticker" == "x" ]; then
  echo "No symbol specified"
  usage
  exit 1
fi

gateway="$gateway:10000"

echo "Injecting symbol $ticker to be watched"
status=`curl -fw "%{http_code}\\n" -H "Authorization: Bearer $auth_token" -X POST -d "$ticker" http://$gateway/v2/streams/tickers`

if [ $status -ne 200 ]; then
  echo "Failed to send data."
  if [ $status == 401 ]; then
    if [ "x$auth_token" == "x" ]; then
      echo "No access token provided"
    else
      echo "Invalid access token"
    fi
  fi
  echo "Exiting program..."
  exit 1;
fi
