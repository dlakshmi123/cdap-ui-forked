#!/usr/bin/env bash

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`
script=`basename $0`


# curl -X POST -d "$DATA" "http://$DESTHOST:$DESTPORT/v2/streams/orders"

# orderIndex, {"start":start, "end":end, keyvalue pairs}

auth_token=
auth_file="$HOME/.continuuity.accesstoken"

function get_auth_token() {
  if [ -f $auth_file ]; then
    auth_token=`cat $auth_file`
  fi
}

function usage() {
echo "Ticker Order Data Extraction tool."
echo "Usage: $script --start <start> --end <end> [--host <host>]"
echo ""
echo "  Options"
  echo "    --start     Specifies start timestamp"
  echo "    --end       Specifies end timestamp"
  echo "    --symbol    Specifies ticker symbol"
  echo "    --exchange  Specifies exchange"
  echo "    --broker    Specifies broker"
  echo "    --currency  Specifies currency"
  echo "    --host      Specifies the host that Reactor is running on. (Default: localhost)"
  echo "    --help      This help message"
  echo ""
}

gateway="localhost"
id=
name="keyword"
start="0"
end="now"
symbol=
exchange=
broker=
currency=
while [ $# -gt 0 ]
do
  case "$1" in
    --start) shift; start="$1"; shift;;
    --end) shift; end="$1"; shift;;
    --symbol) shift; symbol="$1"; shift;;
    --exchange) shift; exchange="$1"; shift;;
    --broker) shift; broker="$1"; shift;;
    --currency) shift; currency="$1"; shift;;
    --host) shift; gateway="$1"; shift;;
    *)  usage; exit 1
  esac
done

query=()
if [ "x${symbol}" != "x" ]; then
  query+=("'symbol':'$symbol'")
fi
if [ "x${exchange}" != "x" ]; then
  query+=("'exchange':'$exchange'")
fi
if [ "x${broker}" != "x" ]; then
  query+=("'broker':'$broker'")
fi
if [ "x${currency}" != "x" ]; then
  query+=("'currency':'$currency'")
fi

q=""
for index in ${!query[*]}
do
    if [ "x$q" == "x" ]; then
      q="${query[$index]}"
    else
      q="$q,${query[$index]}"
    fi
done

if [ "x$q" == "x" ]; then
  echo "Query not specified"
  usage
  exit 1
fi

#get the access token
get_auth_token

gateway="$gateway:10000"

echo "Querying order management data service"
echo 
curl -H "Authorization: Bearer $auth_token" -s -d "{'start':'$start', 'end':'$end', $q}" http://$gateway/v2/apps/Ticker/procedures/Orders/methods/orders | python -mjson.tool | grep -v '"id":'
echo 
