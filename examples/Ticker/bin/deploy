#!/usr/bin/env bash

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`
script=`basename $0`
user=$USER
epoch=`date +%s`

function usage() {
  echo "Ticker application deployment tool"
  echo "Usage: $script --app <path-to-jar> [--gateway <hostname-port>]"
  echo ""
  echo "  Options"
  echo "    --app       Specifies the path of jar to be deployed."
  echo "    --gateway   Specifies the hostname and port gateway is running on.(Default: localhost:10000)"
  echo "    --help      This help message"
  echo ""
}

if [ $# -lt 1 ]; then
  usage
  exit 1
fi

gateway="localhost:10000"
app=
while [ $# -gt 0 ]
do
  case "$1" in
    --app) shift; app="$1"; shift;;
    --gateway) shift; gateway="$1"; shift;;
    *)  usage; exit 1
  esac
done


if [ "x$app" == "x" ]; then
  usage
  echo 
  echo "Application path not specified."
fi

name=`basename $app`
curl -s -f -H "X-Archive-Name: $name" -X POST http://$gateway/v2/apps --data-binary @"$app"
exit $?
