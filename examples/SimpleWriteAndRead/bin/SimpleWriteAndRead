#!/usr/bin/env bash

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`
script=`basename $0`

source $bin/../../common.sh

jar="$bin/../$script.jar"

# Starts the SimpleWriteAndRead
start() {
  curl -s -X POST http://$gateway/v2/apps/$app/flows/$app/start 2>/dev/null
}

# Stops the SimpleWriteAndRead
stop() {
  curl -s -X POST http://$gateway/v2/apps/$app/flows/$app/stop 2>/dev/null
}

$action
