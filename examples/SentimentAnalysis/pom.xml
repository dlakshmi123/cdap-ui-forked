<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <artifactId>examples</artifactId>
        <groupId>com.continuuity</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>SentimentAnalysis</artifactId>
    <name>Sentiment Analysis</name>
    <packaging>jar</packaging>

    <properties>
        <app.main.class>com.continuuity.SentimentAnalysis</app.main.class>
        <archive>sentiment-process.zip</archive>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>continuuity-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>power-pack</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-compress</artifactId>
        </dependency>

        <!-- Unit-tests dependencies -->
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>continuuity-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>asm</groupId>
                    <artifactId>asm</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/assemble-sentiment/sentiment</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/sentiment</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>truezip-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <id>copy-out-fileset</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${basedir}/lib/nltk.zip</directory>
                                    <outputDirectory>
                                        ${project.build.directory}/assemble-sentiment/sentiment
                                    </outputDirectory>
                                </fileset>
                                <fileset>
                                    <directory>${basedir}/lib/yaml.zip</directory>
                                    <outputDirectory>
                                        ${project.build.directory}/assemble-sentiment/sentiment
                                    </outputDirectory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-into</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>process-resources</phase>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${project.build.directory}/assemble-sentiment</directory>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                    <outputDirectory>${project.build.outputDirectory}/${archive}</outputDirectory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
