<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.continuuity.payvment</groupId>
    <artifactId>lish.feeds</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>LishFeeds</name>
    <properties>
        <main>com.payvment.continuuity.SocialActionFlow</main>
        <continuuityVersion>1.2.2-SNAPSHOT</continuuityVersion>
    </properties>
    <repositories>
        <repository>
            <id>nexus</id>
            <url>https://repository.continuuity.com/content/groups/public</url>
        </repository>
        <repository>
            <id>releases</id>
            <url>https://repository.continuuity.com/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>continuuity-snapshots</id>
            <url>https://repository.continuuity.com/content/repositories/snapshots/</url>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>continuuity-test</artifactId>
            <version>${continuuityVersion}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>flow</artifactId>
            <version>${continuuityVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>flow</artifactId>
            <version>${continuuityVersion}</version>
            <classifier>api</classifier>
        </dependency>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>data-fabric</artifactId>
            <version>${continuuityVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>data-fabric</artifactId>
            <version>${continuuityVersion}</version>
            <classifier>api</classifier>
        </dependency>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>common</artifactId>
            <version>${continuuityVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.continuuity</groupId>
            <artifactId>common</artifactId>
            <version>${continuuityVersion}</version>
            <classifier>api</classifier>
        </dependency>
        <!-- Add external dependencies -->
        <dependency>
            <groupId>net.sf.opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>2.1</version>
        </dependency>
    </dependencies>
    <!-- Set the main class and tell maven to include dependencies in the jar -->
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${main}</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <inherited>true</inherited>
                <configuration/>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>social-action</id>
            <properties>
                <main>com.payvment.continuuity.SocialActionFlow</main>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-jar-plugin</artifactId>
                        <configuration>
                            <classifier>social-action</classifier>
                            <finalName>LishSocialActionFlow-${project.version}</finalName>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <finalName>LishSocialActionFlow-${project.version}</finalName>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>cluster-writer</id>
            <properties>
                <main>com.payvment.continuuity.ClusterWriterFlow</main>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-jar-plugin</artifactId>
                        <configuration>
                            <classifier>cluster-writer</classifier>
                            <finalName>LishClusterWriterFlow-${project.version}</finalName>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <finalName>LishClusterWriterFlow-${project.version}</finalName>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>feed-reader</id>
            <properties>
                <main>com.payvment.continuuity.ClusterFeedQueryProvider</main>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-jar-plugin</artifactId>
                        <configuration>
                            <classifier>feed-reader</classifier>
                            <finalName>LishFeedReaderQueryProvider-${project.version}</finalName>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <finalName>LishFeedReaderQueryProvider-${project.version}</finalName>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
