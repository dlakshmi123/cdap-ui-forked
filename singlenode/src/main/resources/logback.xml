<?xml version="1.0" encoding="UTF-8"?>

<!--                                                                         -->
<!-- AppFabric Logging Configuration                                         -->
<!--                                                                         -->
<!-- We use the LogBack project for logging in AppFabric. The manual for     -->
<!-- Logback can be found here: http://logback.qos.ch/manual                 -->
<!--                                                                         -->

<configuration>

    <!--
      Disabling some chatty loggers.
    -->
    <logger name="org.apache.commons.beanutils" level="ERROR"/>
    <logger name="org.apache.zookeeper.server" level="ERROR"/>
    <logger name="org.apache.zookeeper" level="ERROR"/>
    <logger name="org.ning.http.client" level="WARN"/>
    <logger name="org.apache.hadoop" level="WARN"/>
    <logger name="org.quartz.core" level="WARN"/>

    <appender name="Rolling" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>logs/reactor.log</file>
        <encoder>
            <pattern>%d{ISO8601} - %-5p [%t:%C{1}@%L] - %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxIndex>10</maxIndex>
            <FileNamePattern>logs/reactor.log.%i</FileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>50000KB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <appender name="Debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/reactor-debug.log</file>
        <encoder>
            <pattern>%d{ISO8601} - %-5p [%t:%C{1}@%L] - %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxIndex>10</maxIndex>
            <FileNamePattern>logs/reactor-debug.log.%i</FileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>50000KB</MaxFileSize>
        </triggeringPolicy>
    </appender>


    <appender name="Error" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} - %-5p [%t:%C{1}@%L] - %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <appender name="CLOG" class="com.continuuity.common.logging.logback.CAppender">              
        <layout>                      
            <!-- Note: we don't insert new line in the pattern as this is done on higher level (in old back-end) -->
            <pattern>%d{ISO8601} - %-5p [%t:%C{1}@%L] - %m</pattern>       
        </layout>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="Rolling"/>
        <appender-ref ref="Debug"/>
        <appender-ref ref="Error"/>
        <appender-ref ref="CLOG"/>
    </root>

</configuration>
